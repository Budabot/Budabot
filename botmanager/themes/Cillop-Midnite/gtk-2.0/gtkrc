style "default"
  {
  engine "pixmap"
  {
 
    
    image
    {
      function          	= BOX
      shadow            	= IN
      file              	= "null.png"
      border           	= { 1, 1, 1, 1 }
      stretch           	= TRUE
    }
    image
    {
      function          	= BOX
      shadow            	= OUT
      file              	= "null.png"
      border            	= { 1, 1, 1, 1 }
      stretch           	= TRUE
    }

#image
#    {
#     
#      function			= FOCUS
#      recolorable		= TRUE
#      file				= "null.png"
