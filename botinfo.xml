<?xml version="1.0"?>
<bot>
	<general>
		<name>Budabot</name>
		<version>0.6.2</version>
		<database>mysql;sqlite</database>
	</general>
	<start>
		<exe>php.exe</exe>
		<script>main.php</script>
		<arguments></arguments>
	</start>
	<messages>
		<starting>****               Supportforum:              ****</starting>
		<shutdown>The bot is shutting down.</shutdown>
		<online>All Systems ready....</online>
	</messages>
	<setup>
		<file>config.php</file>
		<sqlite support="true"></sqlite>
		<mysql support="true"></mysql>
		<setupdonefile enabled="true" var="delete me for new setup"></setupdonefile>
		<username enabled="true" var="$vars['login']"></username>
		<password enabled="true" var="$vars['password']"></password>
		<server enabled="true" var="$vars['dimension']"></server>
		<botname enabled="true" var="$vars['name']"></botname>
		<admin enabled="true" var="$settings['Super Admin']"></admin>
		<guild enabled="true" var="$vars['my guild']"></guild>
		<ignorelist enabled="true" var="$settings['Ignore']"></ignorelist>
		<dbtype enabled="true" var="$settings['DB Type']"></dbtype>
		<dbname enabled="true" var="$settings['DB Name']"></dbname>
		<dbhost enabled="true" var="$settings['DB Host']"></dbhost>
		<dbuser enabled="true" var="$settings['DB username']"></dbuser>
		<dbpw enabled="true" var="$settings['DB password']"></dbpw>
	</setup>
</bot>

